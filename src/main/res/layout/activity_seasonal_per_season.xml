<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_gravity="center"
    tools:context=".SeasonalActivityPerSeason">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/season_materialtoolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_activity_skiing_24dp"
                app:title="Seasonal Data" />
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/favResortTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15sp"
            android:textSize="20sp"
            android:text="Favorite Resort"
            android:textStyle="bold"
            android:theme="@style/OpenTracksTheme" />

        <TextView
            android:id="@+id/favResort1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Resort 1"
            android:textSize="15sp"
            android:theme="@style/OpenTracksTheme" />


        <TextView
            android:id="@+id/favResort2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Resort 2"
            android:textSize="15sp"
            android:theme="@style/OpenTracksTheme" />

        <TextView
            android:id="@+id/favResort3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Resort 3"
            android:textSize="15sp"
            android:theme="@style/OpenTracksTheme" />

        <TextView
            android:id="@+id/favLiftTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Favorite Lifts"
            android:theme="@style/OpenTracksTheme" />

        <TextView
            android:id="@+id/favLift1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lift 1"
            android:textSize="15sp"
            android:theme="@style/OpenTracksTheme" />
        <TextView
            android:id="@+id/favLift2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lift 2"
            android:textSize="15sp"
            android:theme="@style/OpenTracksTheme" />

        <TextView
            android:id="@+id/seasonTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15sp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Season Total"
            android:theme="@style/OpenTracksTheme" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/seasonTotalDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="days"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonTotalDaysValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonTotalVertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="vertical m"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonTotalVerticalValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/seasonTotalRuns"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="runs"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />
            <TextView
                android:id="@+id/seasonTotalRunsValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonTotalDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="distance km"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonTotalDistanceValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/seasonTotalResort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="resort"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />
            <TextView
                android:id="@+id/seasonTotalResortValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonTotalActive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="active"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonTotalActiveValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />
        </LinearLayout>

        <TextView
            android:id="@+id/seasonBests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15sp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Season Bests"
            android:theme="@style/OpenTracksTheme" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/seasonBestsSpeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="max km/h"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />
            <TextView
                android:id="@+id/seasonBestsSpeedValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonBestsTallest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="active"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonBestsTallestValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <TextView
                android:id="@+id/seasonBestsAltitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="max alititude m"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />
            <TextView
                android:id="@+id/seasonBestsAltitudeValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonBestsLongestRun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="longest run km"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />

            <TextView
                android:id="@+id/seasonBestsLongestRunValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:theme="@style/OpenTracksTheme" />
        </LinearLayout>
        <TextView
            android:id="@+id/seasonPerSeasonEmptyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Data for this season"
            android:textAlignment="center" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/aggregated_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>

        <include
            android:id="@+id/bottom_app_bar_layout"
            layout="@layout/bottomappbar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>